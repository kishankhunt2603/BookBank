@model Category

<form method="post" class="m-5">
    <h4>
        Create Category
    </h4><hr />

    @*<div asp-validation-summary="All"></div>*@


    <div class="mt-4">
        <label asp-for="Name"></label> <span class="text-danger">*</span>
        <input asp-for="Name" class="form-control mt-2" autocomplete="off"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <label asp-for="DisplayOrder"></label> <span class="text-danger">*</span>
        <input asp-for="DisplayOrder" class="form-control mt-2" autocomplete="off" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="margin-left:10px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}