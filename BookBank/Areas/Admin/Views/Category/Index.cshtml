@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@*<h1>Categories</h1>*@
<div class="row p-3 my-2 ">
    <div class="col-6 fw-bold fs-4"
        <span>Category List</span>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle-dotted"></i> &nbsp;Add Category</a>
    </div>
</div>

<table class="table table-bordered table-striped text-center" style="width:100%">
    <thead>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>
            Action
        </th>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-4 my-2 "><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-4 my-2 "><i class="bi bi-trash3-fill"></i> &nbsp; Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>