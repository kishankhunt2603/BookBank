@{
    ViewData["Title"] = "Index";
}

<div class="row p-3 my-4 ">
    <div class="col-6 fw-bold fs-4">
        <span>Product List</span>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle-dotted"></i> &nbsp;Add Product</a>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped text-center my-5" style="width:100%">
    <thead>
        <tr>
            <th>Product Title</th>

            <th>Description</th>

            <th>ISBN</th>

            <th>Author</th>

            <th>Price</th>

            <th>Category</th>

            <th>Cover Type</th>

            <th>Action</th>
        </tr>
    </thead>
     
</table>


@section Scripts{
    <script src="~/js/Script.js"></script>
}